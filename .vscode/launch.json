{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Attach",
            "type": "cppvsdbg",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "args": ["EcsTest"],
            "stopAtEntry": false,
            "externalConsole": false,
            "osx": {
                "cwd": "${workspaceFolder}/build/MacOS/CoreEngine.app/Contents/MacOS/",
                "program": "./CoreEngine"
            },
            "windows": {
                "cwd": "${workspaceFolder}/build/Windows/",
                "program": "./CoreEngine.exe"
            },
            "logging": {
                "engineLogging": true
             }
        },
        {
            "name": "(MacOS) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/MacOS/CoreEngine.app/Contents/CoreClr/CoreEngineHost",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/MacOS/CoreEngine.app/Contents/CoreClr/",
            "environment": [],
            "externalConsole": true,
            "MIMode": "lldb"
        },
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "./CoreEngine.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/Windows/",
            "environment": [],
            "externalConsole": false
        }
    ]
}