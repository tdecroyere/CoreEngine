    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "program": "./CoreEngine",
            "args": ["EcsTest"],
            "cwd": "${workspaceFolder}/build/MacOS/CoreEngine.app/Contents/MacOS",
            "stopAtEntry": false,
            "externalConsole": true
        },
        {
            "name": "(MacOS) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/MacOS/CoreEngine.app/Contents/CoreClr/CoreEngineHost",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/MacOS/CoreEngine.app/Contents/CoreClr/",
            "environment": [],
            "externalConsole": true,
            "MIMode": "lldb"
        },
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "../build/Windows/CoreEngine.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/data/",
            "environment": [],
            "externalConsole": true
        }
    ]
}